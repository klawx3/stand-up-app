<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".ConfigHoraActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:text="Hora de recordatorio"
        android:textSize="25dp"
        android:textStyle="bold"
        android:layout_gravity="center"
        android:layout_marginVertical="10dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="¡Aquí podrás configurar la hora en que te recordaremos decirnos cuánto (en minutos) tiempo estuviste trabajando de pie!"
        android:gravity="center"
        android:layout_marginHorizontal="5dp"
        android:textSize="20dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="*LA HORA POR DEFECTO SON LAS 11:00PM"
        android:textSize="12dp"
        android:layout_marginVertical="5dp"/>

    <Space
        android:layout_width="wrap_content"
        android:layout_height="30dp"/>


    <Button
        android:id="@+id/btn_CONFIGHORA_seleccionarhora"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:text="Seleccionar hora"/>

    <TextView
        android:id="@+id/txt_CONFIGHORA_horaselccionada"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Aquí aparecerá la hora seleccionada"
        android:gravity="center"/>

    <Space
        android:layout_width="wrap_content"
        android:layout_height="50dp"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_CONFIGHORA_volver"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Volver"/>

        <Space
            android:layout_width="10dp"
            android:layout_height="wrap_content"/>

        <Button
            android:id="@+id/btn_CONFIGHORA_confirmar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Confirmar"/>


    </LinearLayout>
</LinearLayout>