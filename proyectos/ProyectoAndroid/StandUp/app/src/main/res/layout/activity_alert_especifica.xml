<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".AlertRepetitivaActivity">

    <EditText
        android:id="@+id/txtTitulo"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:hint="Titulo de notificación"
        android:gravity="center"/>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/btn_selechorain"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@color/colorPrimaryDark"
            android:padding="10dp"
            android:text="Hora Inicio"
            android:textColor="#fff" />

        <Button
            android:id="@+id/btn_selechorafin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@color/colorPrimaryDark"
            android:padding="10dp"
            android:text="Hora Fin"
            android:textColor="#fff"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_horain"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:hint="Hora Seleccionada"
            android:textColor="#000"
            android:textSize="20dp"
            />

        <TextView
            android:id="@+id/tv_horafin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:hint="Hora Seleccionada"
            android:textColor="#000"
            android:textSize="20dp" />
    </LinearLayout>

    <EditText
        android:id="@+id/txt_msje_inicio"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:hint="Especifique mensaje de inicio"/>

    <EditText
        android:id="@+id/txt_msje_fin"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:hint="Especifique mensaje de fin"/>

    <Button
        android:id="@+id/btn_selecDia"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="@color/colorPrimaryDark"
        android:padding="10dp"
        android:text="Seleccionar Día"
        android:textColor="#fff" />

    <TextView
        android:id="@+id/tv_dia"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="10dp"
        android:hint="Día Seleccionado"
        android:textColor="#000"
        android:textSize="20dp"

        />




    <Button
        android:id="@+id/btn_confirmar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Crear Aviso." />


    <Space
        android:layout_width="wrap_content"
        android:layout_height="30dp" />

    <Button
        android:id="@+id/btn_volver"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Volver" />


</LinearLayout>